#!/usr/bin/env ruby
require 'rubygems'
$LOAD_PATH << File.join(File.dirname(__FILE__), '../lib')
require 'pbr'
require 'pp'

# borrowed from beefcake

ns = (ENV['PBR_NAMESPACE'] || '').split('::')

pbr      = Pbr.new(PbrMapping.vanilla)
input    = STDIN.read
request  = pbr.read(input, CodeGeneratorRequest)
response = Pbr::Generator.compile(ns, request)
output   = pbr.write(response, CodeGeneratorResponse)

STDOUT.print(output)
